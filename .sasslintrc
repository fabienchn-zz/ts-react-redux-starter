{
  "options": {
    "merge-default-rules": false,
    "max-warnings": 50
  },
  "files": {
    "include": "**/*.scss",
    "ignore": "node_modules/**/*.scss"
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "empty-line-between-blocks": 2,
    "class-name-format": [
      2,
      {
        "allow-leading-underscore": false,
        "convention": "^([a-z]+--([a-z]|-)+(__([a-z]|-)*)?)$|^([a-z0-10-]+)$"
      }
    ],
    "id-name-format": [
      2,
      {
        "allow-leading-underscore": false,
        "convention": "hyphenatedlowercase"
      }
    ],
    "brace-style": [
      2,
      {
        "style": "1tbs",
        "allow-single-line": false
      }
    ],
    "attribute-quotes": 2,
    "declarations-before-nesting": 2,
    "hex-length": [
      2,
      {
        style: long
      }
    ],
    "leading-zero": [
      2,
      {
        include: true
      }
    ],
    "no-empty-rulesets": 2,
    "no-misspelled-properties": 2,
    "one-declaration-per-line": 2,
    "space-after-colon": 2,
    "space-after-comma": 2,
    "space-around-operator": 2,
    "space-before-brace": 2,
    "space-before-colon": [
      2,
      {
        include: false
      }
    ],
    "space-between-parens": [
      2,
      {
        include: false
      }
    ],
    "trailing-semicolon": 2,
    "url-quotes": 2,
    "zero-unit": [
      2,
      {
        include: false
      }
    ]
  }
}
